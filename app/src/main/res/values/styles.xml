<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="button_style" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/dimen_48dp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:background">@drawable/ic_button_shape</item>
    </style>


</resources>
